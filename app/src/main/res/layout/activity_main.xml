<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/app_headline"
            android:gravity="center_horizontal"
            android:text="SurveyApp"
            android:layout_marginBottom="10dp"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/app_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Companion app for a Researcher"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="19sp"
            android:layout_marginBottom="10dp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/app_headline">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:backgroundTint="#01ffe6"
                android:textColor="#ff0101"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_weight="1"
                android:layout_marginRight="25dp"
                android:backgroundTint="#ff0101"/>
        </LinearLayout>


    </RelativeLayout>


</ScrollView>
